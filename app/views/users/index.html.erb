    <!-- プロフィール -->
  <div class="container">
    <div class="row">
      <div class="col-lg-3">
        <h2>User info</h2>
        <%= form_for(@user) do |f| %>
          <div class="form-group">
            <div class="user-edit-image">
              <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
              <br>
            </div>
          </div>
        <% end %>
        <table class="table">
          <thead>
            <th></th>
            <th></th>
          <thead>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </table>
      　　 <% if @user.id == current_user.id %>
            <%= link_to edit_user_path(@user.id), class: 'btn btn-default form-control' do %>
            <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
            <% end %>
          <% end %>

        <h2>New book</h2>
        <div class="newbook">
          <%= form_for(@new_book) do |b|%>
            <h4>Title</h4>
            <%= b.text_field :title, class: "control-form" %>
            <h4>Opinion</h4>
            <%= b.text_area :body, class: "control-form" %>
            <%= b.submit '投稿', class: "btn btn-primary form-control"%>
          <% end %>
        </div>
      </div>

