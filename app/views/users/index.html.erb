<body>
<!-- header テンプレート-->
<%= render '/list' %>

    <!-- プロフィール -->
  <div class="profile_container">
    <h2>User info</h2>
    <%= form_for(@user) do |f| %>
      <div class="form-group">
        <div class="user-edit-image">
          <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
        </div>
      </div>
    <% end %>
    <table class="profile">
      <tr>
        <td>name</td>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <td>introduction</td>
        <td><%= @user.introduction %></td>
      </tr>
    </table>
    <div class="row">
  　　 <% if @user.id == current_user.id %>
          <p><%= link_to "プロフィール編集", edit_user_path(@user), class: "pull-right" %></p>
      <% end %>
    </div>
    <h2>New book</h2>
    <div class="newbook">
      <%= form_for(@new_book) do |b|%>
        <h4>Title</h4>
        <%= b.text_field :title %>
        <h4>Opinion</h4>
        <%= b.text_area :body %>
        <%= b.submit '投稿' %>
      <% end %>
    </div>
